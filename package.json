{
  "name": "ipcraft-vscode",
  "publisher": "bleviet",
  "repository": {
    "type": "git",
    "url": "https://github.com/bleviet/ipcraft-vscode"
  },
  "displayName": "IPCraft for VS Code",
  "description": "Visual editor for IP Core (IPCraft) and Memory Map specifications",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fpga-ip-core.createIpCore",
        "title": "New IP Core",
        "category": "IPCraft"
      },
      {
        "command": "fpga-ip-core.createMemoryMap",
        "title": "New Memory Map",
        "category": "IPCraft"
      },
      {
        "command": "fpga-ip-core.createIpCoreWithMemoryMap",
        "title": "New IP Core + Memory Map",
        "category": "IPCraft"
      },
      {
        "command": "fpga-ip-core.generateVHDL",
        "title": "Generate VHDL",
        "category": "IPCraft"
      },
      {
        "command": "fpga-ip-core.generateVHDLWithBus",
        "title": "Generate VHDL (Select Bus)",
        "category": "IPCraft"
      },
      {
        "command": "fpga-ip-core.parseVHDL",
        "title": "Import from VHDL",
        "category": "IPCraft",
        "icon": "$(file-code)"
      },
      {
        "command": "fpga-ip-core.viewBusDefinitions",
        "title": "View Bus Definitions",
        "category": "IPCraft",
        "icon": "$(list-unordered)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "fpga-ip-core.parseVHDL",
          "when": "resourceExtname == .vhd || resourceExtname == .vhdl",
          "group": "fpga@1"
        }
      ],
      "editor/title": [
        {
          "command": "fpga-ip-core.parseVHDL",
          "when": "resourceExtname == .vhd || resourceExtname == .vhdl",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "fpgaMemoryMap.editor",
        "displayName": "Memory Map Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.mm.yml"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "fpgaIpCore.editor",
        "displayName": "IP Core Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.ip.yml"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test",
    "generate-types": "json2ts -i node_modules/ipcraft-spec/schemas/memory_map.schema.json -o src/webview/types/memoryMap.d.ts && json2ts -i node_modules/ipcraft-spec/schemas/ip_core.schema.json -o src/webview/types/ipCore.d.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.33",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "ipcraft-spec": "file:./ipcraft-spec",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "json-schema-to-typescript": "^13.0.0",
    "lint-staged": "^15.5.2",
    "mocha": "^10.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/nunjucks": "^3.2.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "css-loader": "^6.8.1",
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "yaml": "^2.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
